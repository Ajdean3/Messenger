App.cable = ActionCable.createConsumer("/cable")
App.conversation = App.cable.subscriptions.create "ConversationChannel",
  connected: ->
    # Called when the subscription is ready for use on the server
    
  disconnected: ->
    # Called when the subscription has been terminated by the server
    
  received: (data) ->
    conversation_container = $("#c_#{data['conversation_id']}")
    if $("#c_#{data['conversation_id']}").length == "0"
      $("#ch_#{data['receiver_id']}").append("<div><br>From:#{data['user_email']}<br>To:#{data['receiver_email']}</div>");
      
    conversation_container.append("<div class = 'message'>#{data['user_email']}: #{data['text']}</div><br>");
    alert $(".message-holder");
     
    
  speak: (user_email, user_id, text, conversation_id) ->
    $("#message-input").val("")
    @perform 'speak', {user_email: user_email, user_id: user_id , text: text, conversation_id: conversation_id }

