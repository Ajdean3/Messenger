
<div id = "index-container">
	<div id = "side-container">
		<div id = "logo">
			<%= image_tag("quickmessanger-logo.jpeg", style: "width:100%") %>
			<div id = "logo-text">QuickMessanger</div>
		</div>	
		<div id = "index-connection-status">

		</div>
		<div id = "new-message-button">
			<div id = "new-message-text">New Message</div>
		</div>
		<div id = "setting-button">
			<div id = "setting-text">Setting</div>
		</div>
		<div id = "sign-out-button">
			<div id = "sign-out-text"><%= link_to "Sign Out",  destroy_user_session_path ,method: :delete %></div>
		</div>
	</div>
	<div class = "conversation-container">

		<div id = "new-message-div">
			<%= form_for(:conversation, url: conversations_path) do |f| %>
			<%= f.label "to" %>
			<%=	text_field_tag :receiver_email %>
			<br>
			<%= f.label "message" %>
			<%= text_area_tag :message_to_send %>
			<%= f.submit "Send" %>
			<% end %>
		</div>
		<div id = "ch_<%= current_user.id %>" class = "conversation-holder">
			<% @conversations.each do |conversation| %>
			<div class = "conversation">
				<br>
				From:
				<%=	User.find(conversation.sender_id).email %>
				<br>
				To:
				<%= User.find(conversation.receiver_id).email %>
				<div>
					<%= link_to "Enter", conversation %>
				</div>
			</div>
			<% end %>
			<br>



		</div>


	</div>
</div>
<script type="text/javascript">
$("#new-message-button").on("click",function(){
	$("#new-message-div").slideToggle();

});

</script>